
#
# wm independent hotkeys
#

super + shift + @Delete
    i3lock -c "1d2021"

super + @Print
    flameshot full -c

@Print
    flameshot gui

#
# controls on laptop keyboard
#

XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%

XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%

XF86AudioMute
    pactl set-sink-mute 0 toggle

XF86AudioMicMute
    pactl set-source-mute 1 toggle

XF86MonBrightnessUp
    brightnessctl set +5%

XF86MonBrightnessDown
    brightnessctl set 5%-

#
# controls on very nice other keyboard :)
#

control + alt + l
    pactl set-sink-volume 0 +5%

control + alt + q
    pactl set-sink-volume 0 -5%

control + alt + m  + o
    pactl set-sink-mute 0 toggle

control + alt + m + i
    pactl set-source-mute 1 toggle

control + alt + b
    brightnessctl set +5%

control + alt + d
    brightnessctl set 5%-
