
#
# wm independent hotkeys
#

super + @Delete
    i3lock -c "1d2021" -f

super + @Print
    flameshot full -c

@Print
    flameshot gui

#
# controls on laptop keyboard
#

XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%

XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%

XF86AudioMute
    pactl set-sink-mute 0 toggle

XF86AudioMicMute
    pactl set-source-mute 1 toggle

XF86MonBrightnessUp
    brightnessctl set +5%

XF86MonBrightnessDown
    brightnessctl set 5%-

#
# controls on very nice other keyboard :)
#

control + alt + l
    pactl set-sink-volume 0 +5% ; notify-send --urgency=LOW "increased volume" "$( pactl list sinks | grep '^[[:space:]]Volume:' | head -n $(( $SINK + 1 )) | tail -n 1 | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,')" 

control + alt + q
    pactl set-sink-volume 0 -5% ;  notify-send --urgency=LOW "decreased volume" "$( pactl list sinks | grep '^[[:space:]]Volume:' | head -n $(( $SINK + 1 )) | tail -n 1 | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,')"

control + alt + m  + o
    pactl set-sink-mute 0 toggle

control + alt + m + i
    pactl set-source-mute 1 toggle ; 

control + alt + b
    brightnessctl set +5% ; notify-send --urgency=LOW "increased brightness" "$(brightnessctl g)"

control + alt + d
    brightnessctl set 5%- ; notify-send --urgency=LOW "decreased brightness" "$(brightnessctl g)"
